<script>
  import wepy from 'wepy'

  export default class ShopMap extends wepy.page {
    config = {
      navigationBarTitleText: 'ShopMap'
    }

    data = {
      map_src: './wfg_map.jpg',
      entrance_src: './entrance.jpg',
      addr: {
        postcode: '104-0061',
        phone: '03-3572-6811',
        address: '東京都中央区銀座5丁目6－6'
      },
      show: {
        popup: false
      }
    }

    methods = {
      btnShowPopup() {
        let vm = this
        vm.show.popup = true
        vm.$apply()
      },
      btnHidePopup() {
        let vm = this
        vm.show.popup = false
        vm.$apply()
      }
    }

    onLoad() {
